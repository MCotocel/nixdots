res=$(echo -en "Reload|Screen|Lock|Suspend|Logout|Shutdown|Reboot" | rofi -sep "|" -dmenu -i -p 'Power Options' -theme-str 'window { height: 25%; width: 15%;}') # Make selection prompt

if [ $res = "Reload" ]; then

    ~/.bin/sys-notify 'Reloading config' low
    sleep 1
    echo 'awesome.restart()' | awesome-client

elif [ $res = "Screen" ]; then

    ~/.bin/sys-notify 'Turning screen off' low
    xset dpms force off

elif [ $res = "Lock" ]; then

    ~/.bin/sys-notify 'Locking screen' low
    ~/.bin/lock

elif [ $res = "Suspend" ]; then

    ~/.bin/sys-notify 'Suspending' low
    systemctl suspend

elif [ $res = "Logout" ]; then

    ~/.bin/sys-notify 'Logging out' low
    sleep 1
    echo 'awesome.quit()' | awesome-client

elif [ $res = "Shutdown" ]; then # If selection is shutdown

    ~/.bin/sys-notify 'Shutting down' low
    sleep 1
    shutdown -h now

elif [ $res = "Reboot" ]; then

    ~/.bin/sys-notify 'Rebooting' low
    sleep 1
    reboot

fi
